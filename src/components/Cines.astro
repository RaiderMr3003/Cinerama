---
import cines from "../data/cines.json";
import { MapPin, Clapperboard, TvMinimal } from "@lucide/astro";
---

<section class="my-10 px-4 mx-10 text-white">
  <header>
    <div class="text-center space-y-3">
      <h2 class="text-2xl md:text-4xl lg:text-6xl font-bold">Nuestros Cines</h2>
      <p>Encuentra el cine perfecto en tu ciudad. Explora nuestras ubicaciones.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-5 mb-5 sm:mx-5 md:mx-20">
      <div class="bg-gradient-to-r from-blue-600/20 to-purple-600/20 rounded-2xl p-6 border border-blue-500/30 backdrop-blur-sm">
        <div class="flex items-center gap-3">
          <MapPin class="w-8 h-8 text-blue-400" />
          <div>
            <h3 class="text-2xl font-bold text-white">10</h3>
            <p class="text-slate-300">Ciudades</p>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-r from-green-600/20 to-blue-600/20 rounded-2xl p-6 border border-green-500/30 backdrop-blur-sm">
        <div class="flex items-center gap-3">
          <Clapperboard class="w-8 h-8 text-green-400" />
          <div>
            <h3 class="text-2xl font-bold text-white">11</h3>
            <p class="text-slate-300">Cines</p>
          </div>
        </div>
      </div>

      <div class="bg-gradient-to-r from-purple-600/20 to-pink-600/20 rounded-2xl p-6 border border-purple-500/30 backdrop-blur-sm">
        <div class="flex items-center gap-3">
          <TvMinimal class="w-8 h-8 text-purple-400" />
          <div>
            <h3 class="text-2xl font-bold text-white">80</h3>
            <p class="text-slate-300">Salas</p>
          </div>
        </div>
      </div>
    </div>
  </header>
</section>
<main class="container mx-auto px-4 text-white">
  {cines.map((cine) => (
    <div class="flex items-center">
      <MapPin class="w-10 text-blue-400" />
      <h2 class="text-xl md:text-3xl lg:text-4xl font-bold ">
        {cine.nombre}
      </h2>
    </div>
  ))}
</main>
